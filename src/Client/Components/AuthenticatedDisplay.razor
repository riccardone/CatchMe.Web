

<header>
    <UserInfoDisplay LogoutText="@LogoutText" />
</header>

<main>
    @if (!_showMap)
    {
        <YouOnMap OnClick="YouOnTheMapHandler" />
        <FriendsDisplay />
    }
    else
    {
        <MapDisplay />
    }
</main>

<footer>    
    <button class="btn btn-primary" @onclick="@(() => { _isInvitingFriend = false; })">Invite friend</button>
</footer>

@if (_isInvitingFriend)
{
    <Overlay>
        <p>Invite a friend</p>
        <button @onclick="@(() => { _isInvitingFriend = false; })">Cancel</button>
    </Overlay>
}

@code {
    bool _isInvitingFriend;
    bool _showMap;
    [Parameter] public string SubtitleText { get; set; }
    [Parameter] public string LogoutText { get; set; }

    void YouOnTheMapHandler()
    {
        _showMap = true;
    }
}